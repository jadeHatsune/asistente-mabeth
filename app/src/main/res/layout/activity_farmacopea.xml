                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="217dp"
                android:layout_height="79dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:elevation="6dp"
                android:fontFamily="@font/balsamiqsans_normal"
                android:text="Es conocido como un sistema de control de calidad"
                android:textAlignment="center"
                android:textColor="#284932"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/view18"
                app:layout_constraintEnd_toStartOf="@+id/animPrinci2"
                app:layout_constraintStart_toStartOf="@+id/view18"
                app:layout_constraintTop_toBottomOf="@+id/viewResComp1" />

            <View
                android:id="@+id/view18"
                android:layout_width="383dp"
                android:layout_height="127dp"
                android:layout_marginStart="8dp"
