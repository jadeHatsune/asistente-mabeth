                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewResComp1" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animPrinci35"
                android:layout_width="144dp"
                android:layout_height="123dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="@+id/view18"
                app:layout_constraintTop_toTopOf="@+id/view18"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/txtTextoDiferencia"
                android:layout_width="353dp"
                android:layout_height="222dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:elevation="7dp"
                android:fontFamily="@font/balsamiqsans_normal"
                android:text="La Farmacopea Herbolaria de los Estados Unidos Mexicanos (FHEUM), es el documento expedido por la Secretaría de Salud que consigna los métodos generales de análisis y especificaciones técnicas que deberán cumplir las plantas y los derivados de ellas que se utilicen en la elaboración de medicamentos y remedios herbolarios."
                android:textAlignment="center"
                android:textColor="#284932"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="@+id/viewResComp"
                app:layout_constraintEnd_toEndOf="@+id/viewResComp"
                app:layout_constraintStart_toStartOf="@+id/viewResComp"
                app:layout_constraintTop_toBottomOf="@+id/txtTituloDiferencia" />

            <TextView
                android:id="@+id/txtTituloDiferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:elevation="7dp"
                android:fontFamily="@font/balsamiqsans_normal"
                android:text="FHEUM"
                android:textAlignment="center"
                android:textColor="#284932"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/viewResComp"
                app:layout_constraintTop_toTopOf="@+id/viewResComp" />

            <View
                android:id="@+id/viewResComp"
                android:layout_width="391dp"
                android:layout_height="293dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/custom_button11"
                android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewResComp5" />

            <TextView
                android:id="@+id/txtTextoPor"
                android:layout_width="344dp"
                android:layout_height="345dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="7dp"
                android:fontFamily="@font/balsamiqsans_normal"
                android:text="El objetivo primordial de la Farmacopea es el aseguramiento de la salud de la población, estableciendo normas de calidad para las materias primas y excipientes empleados en la elaboración de medicamentos, normalizando las especificaciones que definen la calidad física, química y biológica de los mismos. Hasta la sexta edición la Farmacopea Argentina y su contenido estaba orientada a la farmacia oficinal, incluyendo las especificaciones de las recetas oficinales y oficiales que normalmente se elaboraban y se controlaban en las mismas farmacias oficinales u hospitalarias."
                android:textAlignment="center"
                android:textColor="#284932"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/viewResComp5"
                app:layout_constraintEnd_toEndOf="@+id/viewResComp5"
                app:layout_constraintStart_toStartOf="@+id/viewResComp5"
                app:layout_constraintTop_toBottomOf="@+id/txtTituloSintaxis" />

            <View
                android:id="@+id/viewResComp5"
                android:layout_width="390dp"
                android:layout_height="430dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button11"
                android:elevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewResComp2" />

            <TextView
                android:id="@+id/txtTextoPor3"
                android:layout_width="355dp"
                android:layout_height="235dp"
                android:elevation="7dp"
                android:fontFamily="@font/balsamiqsans_normal"
                android:text="Se promuebe la salud pública estableciendo, determinando y distribuyendo, a través de suplementos y otros soportes, los estándares oficiales de calidad para la producción, almacenamiento y distribución de los medicamentos; coordinando  los apoyos necesarios al trabajo de la Comisión Permanente de la FEUM en la elaboración, actualización y revisión."
                android:textAlignment="center"
                android:textColor="#284932"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="@+id/viewResComp2"
                app:layout_constraintEnd_toEndOf="@+id/viewResComp2"
                app:layout_constraintStart_toStartOf="@+id/viewResComp2"
                app:layout_constraintTop_toBottomOf="@+id/txtTituloPor" />

            <TextView
                android:id="@+id/txtTituloSintaxis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:elevation="7dp"
                android:fontFamily="@font/balsamiqsans_normal"
                android:text="La salud pública y farmacopea."
                android:textAlignment="center"
                android:textColor="#284932"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/viewResComp5"
                app:layout_constraintTop_toTopOf="@+id/viewResComp5" />

            <View
                android:id="@+id/viewResComp2"
                android:layout_width="383dp"
                android:layout_height="300dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button11"
