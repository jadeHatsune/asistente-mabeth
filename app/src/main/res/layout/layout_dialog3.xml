<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogContainer3"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:padding="20dp"
    >
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titledialog3"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:text="Bienvenido"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/balsamiqsans_normal"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/interrogation"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/textTitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textTitle1"
            app:tint="@color/white"></ImageView>

        <TextView
            android:id="@+id/textMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Puedes visualizar tus eventos y tareas que se aproximan en la pantalla de inicio. AdemÃ¡s de poder dar click a uno de ellos para modificarlos."
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/balsamiqsans_normal"
            android:includeFontPadding="false"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTitle1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <Button
        android:id="@+id/btnDialog1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/dialogbtn3"
        android:textColor="@color/white"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/layoutDialog1"
        app:layout_constraintTop_toBottomOf="@id/layoutDialog1"/>
</androidx.constraintlayout.widget.ConstraintLayout>