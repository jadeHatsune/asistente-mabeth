<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogContainer9"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:padding="20dp"
    >
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDialog9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTitle9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titledialog2"
            android:padding="10dp"
            android:text="Bienvenido"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/balsamiqsans_normal"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageView
            android:id="@+id/imageIcon9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/info"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/textTitle9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textTitle9"
            app:tint="@color/white"></ImageView>

        <TextView
            android:id="@+id/textMensaje9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Ya estás preparado para crear una nota. Si deseas ir al Menú principal puedes pulsar el botón de regresar."
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/balsamiqsans_normal"
            android:includeFontPadding="false"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTitle9"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <Button
        android:id="@+id/btnDialog9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/dialogbtn2"
        android:textColor="@color/white"
        android:text="Cerrar"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/layoutDialog9"
        app:layout_constraintTop_toBottomOf="@id/layoutDialog9"/>
</androidx.constraintlayout.widget.ConstraintLayout>