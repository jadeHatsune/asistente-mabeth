<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back53"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context=".ui.Settings.SettingsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/lblTitulosettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/balsamiqsans_normal"
                    android:text="Ajustes"
                    android:textColor="@color/white"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgPerfilUsuSet"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.106"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/txtNombreUsuSet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"
                        android:text="Nombre"
                        android:textAlignment="center"
                        android:textColor="#E6E2F4"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblTell" />

                </LinearLayout>



            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/layoutsettings"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_gravity="left"
                android:background="@drawable/back52"
                app:cardCornerRadius="15dp"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/textViewSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/balsamiqsans_normal"
                    android:text="Configuración de la cuenta"
                    android:textColor="#888890"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layoutsettings"/>

                <LinearLayout
                    android:id="@+id/layoutcontra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutnombre" >

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".2"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="18dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/llave"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/balsamiqsans_normal"
                        android:text="Cambiar contraseña"
                        android:textColor="#686868"
                        android:textSize="20dp"
                        />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".1"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="20dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/derecho"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutnombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewSettings" >

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".2"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="18dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/usuario"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />

                    <TextView
                        android:id="@+id/txtCambiarNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/balsamiqsans_normal"
                        android:text="Editar perfil"
                        android:textColor="#686868"
                        android:textSize="20dp"
                        />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".1"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/derecho"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutapariencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutcontra" >

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".2"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="18dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/personalizar"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />

                    <TextView
                        android:id="@+id/textApariencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/balsamiqsans_normal"
                        android:text="Apariencia"
                        android:textColor="#686868"
                        android:textSize="20dp"
                        />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".1"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="20dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/derecho"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/lblsetOtros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/balsamiqsans_normal"
                    android:text="Otros"
                    android:textAlignment="center"
                    android:textColor="#686868"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutapariencia" />

                <LinearLayout
                    android:id="@+id/layoutAyuda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutAcerca" >

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".2"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="18dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/interrogatorio"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />

                    <TextView
                        android:id="@+id/textAyuda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/balsamiqsans_normal"
                        android:text="Ayuda"
                        android:textColor="#686868"
                        android:textSize="20dp"
                        />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".1"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/derecho"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAcerca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblsetOtros" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="26dp"
                        android:layout_weight=".1"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/informacion"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />

                    <TextView
                        android:id="@+id/textAcerca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/balsamiqsans_normal"
                        android:text="Acerca de Mabeth"
                        android:textColor="#686868"
                        android:textSize="20dp"
                        />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="26dp"
                        android:layout_weight=".1"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="18dp"
                        app:backgroundTint="@color/black"
                        android:src="@drawable/derecho"
                        android:textStyle="bold"
                        android:background="@null"
                        app:tint="@color/black"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btnsetGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/custom_button30"
                    android:fontFamily="@font/balsamiqsans_normal"
                    android:text="Guardar Cambios"
                    android:textSize="16dp"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutAyuda" />


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </ScrollView>

    </LinearLayout>