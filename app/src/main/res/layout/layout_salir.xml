<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutOutNoteContainer"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/backgroundcolor2">

    <ImageView
        android:id="@+id/imageOut"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Mabeth"
        android:src="@drawable/interrogatorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textViewOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/balsamiqsans_normal"
        android:includeFontPadding="false"
        android:text="Salir"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageOut"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messagedelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/balsamiqsans_normal"
        android:includeFontPadding="false"
        android:text="¿Estás seguro de que deseas salir sin antes guardar esta nota?"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOut" />

    <TextView
        android:id="@+id/txtAceptar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/balsamiqsans_normal"
        android:includeFontPadding="false"
        android:text="ACEPTAR"
        android:textColor="#D2C44C"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messagedelete" />

    <TextView
        android:id="@+id/txtCancel2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/balsamiqsans_normal"
        android:includeFontPadding="false"
        android:text="CANCELAR"
        android:textColor="#D2C44C"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtAceptar"
        app:layout_constraintTop_toBottomOf="@+id/messagedelete" />

</androidx.constraintlayout.widget.ConstraintLayout>